
<div class="flex align-end justify-end my-4">
<%= link_to "Create a new Vendor", new_vendor_path, class: "bg-cyan-500 text-white p-2 border rounded" %>
</div>
<% if @vendors %>

<table class="w-full border-collapse border border-gray-400" >
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>User</th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
        <% @vendors.each do |vendor| %>
            <tr class="text-center border border-gray-300">
                <td><%= vendor.name %></td>
                <td><%= vendor.description %></td>
                <td class="flex justify-evenly gap-2">
                <%= link_to vendor.user.email, user_path(vendor.user.id) , class: "w-1/3 underline text-orange-500" %> </td>
                <td><%= link_to "Update", edit_vendor_path(vendor) , class: "w-1/3 underline text-yellow-500" %>
                <br>
                <%= form_with(url: destroy_vendor_path(vendor), method: :delete, local: true, html: {
                    class: "w-1/3 submit-form  text-red-500 "
               }) do |form| %>
                    <%= form.submit "Delete", data: { confirm: "Are you sure?" } %>
                    <% end %>
                </td>
                
            </tr>                               
        <% end %>
    </tbody>
    </table>
<% end %>

